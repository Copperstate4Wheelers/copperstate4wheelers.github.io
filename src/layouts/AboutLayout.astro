---
import ContentPageLayout from "./ContentPageLayout.astro";
import Subnav from "@components/Subnav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<ContentPageLayout title={title}>
  <Subnav
    title="About Us"
    links={[
      ["/about", "Club Info"],
      ["/about/contact", "Contact Us"],
      ["/about/required-gear", "Required Gear"],
      ["/about/bulldog-canyon", "Bulldog Canyon"],
      ["/about/how-to-join", "How To Join"],
      ["/about/submit-a-run", "Submit A Run"],
    ]}
  />

  <article class="about-content">
    <slot />
  </article>
</ContentPageLayout>

<style>
  h2 {
    margin-bottom: 1rem;
  }
</style>
