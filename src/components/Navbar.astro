---
/**
 * Navbar philosophy: mobile first and progressively enhance on wider screens.
 */
---

<header>
  <h1 class="logo">CS4W</h1>
  <input type="checkbox" id="nav-toggle" class="nav-toggle" />
  <nav>
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Members</a></li>
      <li><a href="#">Calendar</a></li>
    </ul>
  </nav>
  <label for="nav-toggle" class="nav-toggle-label">
    <span></span>
  </label>
</header>

<style>
  header {
    background: var(--background);
    text-align: center;
    position: fixed;
    z-index: 999; /* always on top */
    width: 100%;
    --margin: 1em;
  }

  nav {
    background: var(--background);
    position: absolute; /* relative to the header due to pos: fixed */
    text-align: left;
    top: 100%;
    left: 0%;
    width: 100%;
    transform: scale(1, 0);
    transform-origin: top left;
    transition: transform 400ms ease-out;
  }

  nav ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  nav li {
    margin-bottom: var(--margin);
    margin-left: var(--margin);
  }

  nav a {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 1.2rem;
    text-transform: uppercase;
    opacity: 0;
    transition: opacity 150ms ease-in-out;
  }

  nav a:hover {
    color: var(--text-highlight);
  }

  .nav-toggle {
    display: none;
  }

  .nav-toggle:checked ~ nav {
    transform: scale(1, 1);
  }

  .nav-toggle:checked ~ nav a {
    opacity: 1;
    transition: opacity 200ms ease-in-out 200ms;
  }

  .nav-toggle-label {
    cursor: pointer;
    position: absolute;
    top: 0%;
    left: 0;
    margin-left: var(--margin);
    height: 100%;
    display: flex;
    align-items: center;
  }

  .nav-toggle-label span,
  .nav-toggle-label span::before,
  .nav-toggle-label span::after {
    --thickness: 0.25em;
    display: block;
    background: var(--text-primary);
    height: var(--thickness);
    width: calc(var(--margin) * 2);
    border-radius: 2px;
    position: relative;
  }

  .nav-toggle-label span::before,
  .nav-toggle-label span::after {
    position: absolute;
    content: "";
  }

  .nav-toggle-label span::before {
    bottom: calc(var(--thickness) * 2);
  }

  .nav-toggle-label span::after {
    top: calc(var(--thickness) * 2);
  }
</style>
