---
/**
 * The home page hero section.
 **/

import { Image } from "astro:assets";

import MontanaMountain from "@assets/pages/index/2024_05__montana_mountain.jpg";
---

<div class="hero">
  <Image
    src={MontanaMountain}
    alt="Copperstate4Wheelers on Montana Mountain."
    decoding="async"
    loading="lazy"
    width="1920"
    class="hero-image"
  />
  <div class="overlay"></div>
  <div class="hero-content">
    <p>Family friendly offroading since 1972</p>
  </div>
</div>

<style>
  .hero {
    font-size: 6rem;
    display: grid;
    grid-template-areas: "content";
    place-items: center;
    background: var(--secondary);
    height: calc(max(50vh, 15em));
    max-height: 100vh;
  }

  .hero * {
    grid-area: content;
  }

  .hero-image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    display: block;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.35);
  }

  .hero-content {
    font-weight: 600;
    color: white;
    border-radius: 0.5em;
    padding: 0.5em;
    text-align: center;
    margin: 0;
  }

  @media screen and (max-width: 1000px) {
    .hero-content {
      font-size: 3rem;
    }
  }

  @media screen and (max-width: 480px) {
    .hero-content {
      font-size: 2rem;
    }
  }
</style>
