---
/**
 * The EventTime is used by the Event listing and the actual event page.
 **/

import IconText from "@components/util/IconText.astro";
import type { ParsedEvent } from "@lib/events";

interface Props {
  event: ParsedEvent;
  class?: string;
}

const { event, class: className = "", ...rest } = Astro.props;
---

<IconText icon="mdi:clock-outline" class={`time ${className}`} {...rest}>
  {event.data.time}
</IconText>

<style>
  .time {
    font-size: 1rem;
    font-weight: 600;
    margin: 0.5rem 0;
  }
</style>
